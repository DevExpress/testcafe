<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Health Monitor</title>
        <script src="/control-panel/vendor/jquery-1.10.2.min.js"></script>
        <script src="/control-panel/vendor/jquery-2.0.3.min.js"></script>
        <script src="/control-panel/vendor/knockout-3.0.0.js"></script>
        <script src="/control-panel/vendor/globalize.min.js"></script>
        <script src="/control-panel/vendor/dx.chartjs.js"></script>
        <script src="/control-panel/js/main.js"></script>
        <link href="/control-panel/style.css" rel="stylesheet" type="text/css">
    </head>
    <body>
        <div class="site">
            <div class="menu-column">
                <ul class="main-menu">
                    <%
                    [{
                        href: '/',
                        text: 'Statistics'
                    }, {
                        href: '/history',
                        text: 'History'
                    }, {
                        href: '/url-list',
                        text: 'Url list'
                    }, {
                        text: 'Clear all statistics and history',
                        className: 'clear-all-data'
                    }].forEach(function(element) { %>
                        <li>
                            <a href="<%= (element.href || '') %>"
                                <%- (element.href === path ? 'class="active"' : '') %>
                                <%- (element.className ? 'class="' + element.className + '"' : '') %>
                                ><%= element.text %></a>
                        </li>
                    <% }); %>
                </ul>
                <% if (path === '/history') { %>
                    <% include views/history-menu %>
                <% } else if (path === '/url-list') { %>
                    <% include views/url-list-menu %>
                <% } %>
            </div>
            <div class="content">
                <% if (path === '/') { %>
                    <% include views/statistics %>
                <% } else if (path === '/history') { %>
                    <% include views/history %>
                <% } else if (path === '/url-list') { %>
                    <% include views/url-list %>
                <% } %>
            </div>
        </div>
    </body>
</html>